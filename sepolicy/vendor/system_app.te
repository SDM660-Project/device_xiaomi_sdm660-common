# Allow theme_prop to be read and set by Settings
get_prop(system_app, theme_prop)
set_prop(system_app, theme_prop) 

# Audio gain
allow system_app sysfs_egain:dir search;                 
allow system_app sysfs_egain:file rw_file_perms;
allow system_app sysfs_headgain:dir search;
allow system_app sysfs_headgain:file rw_file_perms;
allow system_app sysfs_micgain:dir search;
allow system_app sysfs_micgain:file rw_file_perms;
allow system_app sysfs_mgain:file rw_file_perms;
allow system_app sysfs_mgain:dir search;
allow system_app sysfs_hgain:file rw_file_perms;
allow system_app sysfs_hgain:dir search;

# Fastcharge
allow system_app sysfs_fcharge:file { open read getattr write };
allow system_app sysfs_usbcharge:file { open read getattr write };

# FPS Info
allow system_app sysfs_kgsl:dir search;
allow system_app sysfs_kgsl:file r_file_perms;
allow system_app sysfs_graphics:dir search;
allow system_app sysfs_graphics:file r_file_perms;
allow system_app sysfs_fps:dir search;
allow system_app sysfs_fps:file r_file_perms;

# KCAL
allow system_app kcal_dev:file rw_file_perms;
allow system_app kcal_dev:dir search;
